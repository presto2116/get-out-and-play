<p><%= link_to "Index", root_path %></p>
<h1>Activity Show Page!</h1>

	<h1><%= @activity.title %></h1>
	<p>Creator: <%= @activity.creator %></p>
	<p>Date: <%= @activity.date %> </p>
	<p>Location: <%= @activity.location %> </p>
	<p>Description: <%= @activity.description %> </p>
	<p><%= link_to "Delete", activity_path(@activity), method: :delete %>
		<p><%= link_to "Edit", edit_activity_path(@activity)%></p>

	<p><%= link_to "Attend Activity", new_activity_activity_registration_path(@activity) %></p>

<h3>Users Attending the Activity (<%= @activity.activity_registrations.count %>)</h3>
	<% @activity.activity_registrations.each do |f| %>
	<p><%= f.user_name %></p>

	<% end %>


